<div class="form-row type-2">
  <div class="col-12 period-type">
  <b>Forecasts View </b>
</div>
  <div class="form-group col-md-4">
  <label for="inputEmail4">Prior Tonnage Type</label>
  <% if(viewType!='forecast') { %>
   <select id="forecastPriorTonnageType" disabled class="form-control">
    <option value='budgeted' selected>Budgeted</option>
   </select>
   <% } else{%>
     <select id="forecastPriorTonnageType"  class="form-control">
      <option value='budgeted' selected>Budgeted</option>
